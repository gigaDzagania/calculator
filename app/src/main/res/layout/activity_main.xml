<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/resultTextView"/>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:layout_weight="0.58"
            android:background="#875151"
            android:gravity="center"
            android:text="AC"
            android:onClick="erase"
            android:textColor="@color/white"
            android:textSize="30sp" />



        <TextView
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:layout_weight="0.21"
            android:background="#433838"
            android:gravity="center"
            android:text="%"
            android:onClick="operationClick"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:layout_weight="0.212"
            android:background="#433838"
            android:gravity="center"
            android:text="รท"
            android:onClick="operationClick"
            android:textColor="@color/white"
            android:textSize="30sp" />


    </LinearLayout>


    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:weightSum="1">

            <TextView
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="7"
                android:onClick="numberClick"
                android:background="#2563AF"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="8"
                android:onClick="numberClick"
                android:background="#2563AF"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="9"
                android:onClick="numberClick"
                android:background="#2563AF"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="45dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#433838"
                android:gravity="center"
                android:text="ร"
                android:onClick="operationClick"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_margin="1dp"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:weightSum="1">

            <TextView
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="4"
                android:onClick="numberClick"
                android:background="#2563AF"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="5"
                android:onClick="numberClick"
                android:background="#2563AF"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="6"
                android:onClick="numberClick"
                android:background="#2563AF"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="45dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#433838"
                android:gravity="center"
                android:text="-"
                android:onClick="operationClick"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_margin="1dp"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:weightSum="1">

            <TextView
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="1"
                android:onClick="numberClick"
                android:background="#2563AF"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="2"
                android:onClick="numberClick"
                android:background="#2563AF"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="3"
                android:onClick="numberClick"
                android:background="#2563AF"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="45dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#433838"
                android:gravity="center"
                android:text="+"
                android:onClick="operationClick"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_margin="1dp"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:weightSum="1">


            <TextView
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_weight="0.19"
                android:gravity="center"
                android:text="0"
                android:onClick="numberClick"
                android:background="#2563AF"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="1dp"/>


            <TextView
                android:layout_width="45dp"
                android:layout_height="100dp"
                android:layout_weight="0.81"
                android:background="#F39409"
                android:gravity="center"
                android:text="="
                android:onClick="equalsClick"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_margin="1dp"/>

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>